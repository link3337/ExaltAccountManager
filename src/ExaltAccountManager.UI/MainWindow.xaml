<Window x:Class="ExaltAccountManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exalt Account Manager"
       Height="600"
        Width="800"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Styles/CommonStyles.xaml"/>
                <ResourceDictionary Source="/Styles/TextStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Accounts List -->
        <GroupBox Header="Accounts"
                  Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <Button Content="Add Account"
                        Grid.Row="0"
                        Click="BtnAddAccount_Click"
                        Style="{StaticResource ActionButton}"
                        HorizontalAlignment="Right"
                        Margin="5"/>

                <DataGrid  Name="AccountsGrid"
                           Grid.Row="1"
                           ItemsSource="{Binding Accounts}"
                           SelectedItem="{Binding SelectedAccount}"
                           AutoGenerateColumns="False"
                           CanUserAddRows="False"
                           CanUserDeleteRows="False"
                           IsReadOnly="True"
                           SelectionMode="Single"
                           SelectionUnit="FullRow"
                           GridLinesVisibility="All"
                           BorderThickness="1"
                           Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="*"/>
                        <DataGridTemplateColumn Header="Actions"
                                                Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Launch"
                                                Click="BtnOpenSelectedItem_Click"
                                                Style="{StaticResource ActionButton}"
                                                Margin="2"/>
                                        <Button Content="Edit"
                                                Click="BtnEditAccount_Click"
                                                Style="{StaticResource ActionButton}"
                                                Margin="2"/>
                                        <Button Content="Delete"
                                                Click="BtnDelete_Click"
                                                Style="{StaticResource DangerButton}"
                                                Margin="2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="5">
                    <Button Content="Select Next"
                            Click="BtnSelectNext_Click"/>
                    <Button Content="Select Last"
                            Click="BtnSelectLast_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Settings Section -->
        <Expander Header="Settings"
                  Grid.Row="1"
                  IsExpanded="False">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Exalt Path:"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="txtExaltPath"
                         Grid.Column="1"
                         Text="{Binding ExaltPath, UpdateSourceTrigger=PropertyChanged}"
                         PreviewMouseDown="TxtExaltPath_PreviewMouseDown"
                         IsReadOnly="True"/>

                <TextBlock Text="Device Token:"
                           Grid.Row="1"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Text="{Binding DeviceToken, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Row="2"
                        Grid.Column="1"
                        Content="Save Settings"
                        HorizontalAlignment="Right"
                        Click="BtnSaveSettings_Click"/>
            </Grid>
        </Expander>

        <!-- About Section -->
        <StackPanel Grid.Row="3"
                    Margin="0,10,0,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock Text="Made by Lingo with ❤️"
                       Style="{StaticResource AboutTextStyle}"/>
            <TextBlock Text="|"
                       Style="{StaticResource AboutTextStyle}"/>
            <TextBlock Style="{StaticResource AboutTextStyle}">
                <Hyperlink NavigateUri="https://github.com/link3337/ExaltAccountManager"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    Github
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
