<Window x:Class="ExaltAccountManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exalt Account Manager"
        Height="600"
        Width="800"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="MinWidth"
                    Value="80"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Padding"
                    Value="5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Padding"
                    Value="5"/>
        </Style>
        <Style TargetType="Expander">
            <Setter Property="Margin"
                    Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBlock"
                x:Key="AboutTextStyle">
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="HorizontalAlignment"
                    Value="Center"/>
            <Setter Property="Foreground"
                    Value="#666"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Accounts List -->
        <GroupBox Header="Accounts"
                  Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ListBox ItemsSource="{Binding Accounts}"
                         SelectedItem="{Binding SelectedAccount}"
                         Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Column="1"
                            Margin="5">
                    <Button Content="Launch Selected"
                            Click="BtnOpenSelectedItem_Click"/>
                    <Button Content="Select Next"
                            Click="BtnSelectNext_Click"/>
                    <Button Content="Select Last"
                            Click="BtnSelectLast_Click"/>
                    <Button Content="Delete"
                            Click="BtnDelete_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Add Account Section -->
        <Expander Header="Add Account"
                  Grid.Row="1"
                  IsExpanded="False">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Name:"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="txtName"
                         Grid.Column="1"/>

                <TextBlock Text="Email:"
                           Grid.Row="1"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="txtEMail"
                         Grid.Row="1"
                         Grid.Column="1"/>

                <TextBlock Text="Password:"
                           Grid.Row="2"
                           VerticalAlignment="Center"/>
                <PasswordBox x:Name="txtPassword"
                             Grid.Row="2"
                             Grid.Column="1"/>

                <Button Grid.Row="3"
                        Grid.Column="1"
                        Content="Add Account"
                        HorizontalAlignment="Right"
                        Click="BtnAddAccount_Click"/>
            </Grid>
        </Expander>

        <!-- Settings Section -->
        <Expander Header="Settings"
                  Grid.Row="2"
                  IsExpanded="False">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Exalt Path:"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="txtExaltPath"
                         Grid.Column="1"
                         Text="{Binding ExaltPath, UpdateSourceTrigger=PropertyChanged}"
                         PreviewMouseDown="TxtExaltPath_PreviewMouseDown"
                         IsReadOnly="True"/>

                <TextBlock Text="Device Token:"
                           Grid.Row="1"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Text="{Binding DeviceToken, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Row="2"
                        Grid.Column="1"
                        Content="Save Settings"
                        HorizontalAlignment="Right"
                        Click="BtnSaveSettings_Click"/>
            </Grid>
        </Expander>

        <!-- About Section -->
        <StackPanel Grid.Row="3" 
                    Margin="0,10,0,0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <TextBlock Text="Made by Lingo with ❤️"
                       Style="{StaticResource AboutTextStyle}"/>
            <TextBlock Text="|" 
                       Style="{StaticResource AboutTextStyle}"/>
            <TextBlock Style="{StaticResource AboutTextStyle}">
                <Hyperlink NavigateUri="https://github.com/link3337/ExaltAccountManager"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    Github
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
